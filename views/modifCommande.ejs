<h2 class="admin-welcome">MODIFICATION DU PRODUIT COMMANDER</h2>

<form class="formulaire formA" method="post" action="<%=action%>">

<div id="productContainer" >
    <div class="dynamiqueInput">
        <p>Produit : <%=produitCommande.productName%></p>
        <label for="taille">Taille :</label>
            <select id="taille" name="taille">
                <option value="small" <%= produitCommande.taille == "small" ? "selected" : '' %>>Small</option>
                <option value="medium" <%= produitCommande.taille == "medium" ? "selected" : '' %>>Medium</option>
                <option value="large" <%= produitCommande.taille == "large" ? "selected" : '' %>>Large</option>
                <option value="x-large" <%= produitCommande.taille == "x-large" ? "selected" : '' %>>X-Large</option>
            </select><br>
            <label for="quantite">Quantit√© :</label>
            <input type="number" id="quantite" name="quantite" value="<%=produitCommande.quantite%>" required><br>

    </div>
</div>

    <button type="submit">Modifier commande</button>
</form>
