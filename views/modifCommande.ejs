<%- include('header', { class: 'header' }) -%>

    <section class="container-modif">
        <h2 class="theme-heading">MODIFICATION DU PRODUIT COMMANDÉ</h2>
        <form method="post" action="<%= action %>">
            <p class="theme-product">Produit :
                <%= produitCommande.productName %>
            </p>
            <label for="taille" class="theme-subheading">Taille :</label>
            <select id="taille" name="taille" class="theme-select">
                <option value="small" <%= produitCommande.taille == "small" ? "selected" : '' %>>Small</option>
                <option value="medium" <%= produitCommande.taille == "medium" ? "selected" : '' %>>Medium</option>
                <option value="large" <%= produitCommande.taille == "large" ? "selected" : '' %>>Large</option>
                <option value="x-large" <%= produitCommande.taille == "x-large" ? "selected" : '' %>>X-Large</option>
            </select><br>
            <label for="quantite" class="theme-subheading">Quantité :</label>
            <input type="number" id="quantite" name="quantite" value="<%= produitCommande.quantite %>" required class="theme-input"><br>

            <button type="submit" class="theme-button">Modifier commande</button>
        </form>
    </section>


    <%- include('footer') -%>
