<%- include('header') -%>
<main>
  <h2>FORMULAIRE INSCRIPTION</h2>
  <h2>ET CREATION DE COMPTE</h2>
  <form method="post" action="/inscription">
    <label for="nom">Nom :</label>
    <input type="text" id="nom" name="nom" required><br>

    <label for="prenom">Pr√©nom :</label>
    <input type="text" id="prenom" name="prenom" required><br>

    <label for="dateNaissance">Date de naissance :</label>
    <input type="date" id="dateNaissance" name="dateNaissance" required><br>

    <label>Sexe :</label>
    <input type="radio" id="homme" name="sexe" value="h" required>
    <label for="homme">Homme</label>
    <input type="radio" id="femme" name="sexe" value="f" required>
    <label for="femme">Femme</label><br>

    <label for="adresse">Adresse :</label>
    <input type="text" id="adresse" name="adresse" required><br>

    <label for="email">E-mail :</label>
    <input type="email" id="email" name="email" required><br>

    <label>Choix de formule :</label>
    <select id="formule" name="formule" required>
      <option value="1">Formule 1</option>
      <option value="2">Formule 2</option>
      <option value="3">Formule 3</option>
      <option value="4">Formule 4</option>
    </select><br>
    
    <label for="motDePasse">Mot de passe :</label>
    <input type="password" id="motDePasse" name="motDePasse" required><br>

    <button type="submit">S'inscrire</button>
  </form>
</main>
<%- include('footer') -%>