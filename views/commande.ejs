<%- include('header', {class: 'header'}) -%>


        <% console.log(produits) %>


            <h3 class="boutique-header">BOUTIQUE DU CLUB !!!</h3>

            <div class="vetement">
                <div>
                    <img class="vetement-image" src="/images/boutique1.jpg" alt="tee-shirt">
                    <p class="vetement-prix">Prix: 15€</p>
                </div>
                <div>
                    <img class="vetement-image" src="/images/boutique2.jpg" alt="veste">
                    <p class="vetement-prix">Prix: 20€</p>
                </div>
            </div>


            <h3 class="boutique-header">PASSER COMMANDE !!!</h3>

            <form class="formulaire formA" method="post" action="/commande">

                <label for="produit">Produit :</label>

                <div id="productContainer">
                    <div class="dynamiqueInput">
                        <select id="produit" name="produit[]">
            
            <% for (let produit of produits) { %>
            <option value=<%= produit.id %> ><%=produit.name %></option>
            <% } %>
        </select><br>
                        <label for="taille">Taille :</label>
                        <select id="taille" name="taille[]">
                <option value="small">Small</option>
                <option value="medium">Medium</option>
                <option value="large">Large</option>
                <option value="x-large">X-Large</option>
            </select><br>
                        <label for="quantite">Quantité :</label>
                        <input type="number" id="quantite" name="quantite[]" required><br>

                    </div>
                </div>
                <button type="button" onclick="cloneInput()">Ajouter un produit</button>



                <button type="submit">Passer la commande</button>
            </form>

            <p>
                <a class="retour formB" href="/espacemembre">RETOUR</a><br>
            </p>


            <% if (locals.isLogged) { %>
               <button class="logout-button" onclick="window.location.href='/logout'">Déconnexion</button>
                <% } %>


    <%- include('footer') -%>
